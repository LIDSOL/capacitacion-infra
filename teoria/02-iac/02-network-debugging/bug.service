# Systemd service file that randomly cuts the internet every (10-15) minutes

[Unit]
Description=Random Internet Disconnection Service
After=network.target

[Service]
Type=simple
ExecStart=/bin/bash -c 'while true; do sleep $((RANDOM % 300 + 600)); nmcli networking off; sleep $((RANDOM % 60 + 30)); nmcli networking on; done'
Restart=always
RestartSec=5
User=root
Group=root

[Install]
WantedBy=multi-user.target

